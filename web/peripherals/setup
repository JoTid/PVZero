    <script>
      var jsons = [["/pvz/peripherals/config.json", "fillPVZConfig"]];
    </script>
    <script src="/js/postload.js"></script>
    <script type="text/javascript">
      function fillPVZConfig(data, url) {
        ["calibration_low", "calibration_high"].forEach(function (
          id,
          idy,
          arr
        ) {
          document.getElementById(id).value = data["peripherals"][id];
        });
        document.getElementById("enable_lcd").checked =
          data["peripherals"]["enable_lcd"];
        document.getElementById("enable_led").checked =
          data["peripherals"]["enable_led"];
        const analogEnabled = data["peripherals"]["enable_analog"];
        document.getElementById("enable_analog").checked = analogEnabled;
        document.getElementById("calibration_low").disabled = !analogEnabled;
        document.getElementById("calibration_high").disabled = !analogEnabled;
        document.getElementById("low_apply").disabled = !analogEnabled;
        document.getElementById("high_apply").disabled = !analogEnabled;
        if (data["peripherals"]["calibration_low_mes"] > 0) {
          document.getElementById("calibration_low_mes").innerText =
            "gemessener RAW Wert: " +
            data["peripherals"]["calibration_low_mes"];
        }
        if (data["peripherals"]["calibration_high_mes"] > 0) {
          document.getElementById("calibration_high_mes").innerText =
            "gemessener RAW Wert: " +
            data["peripherals"]["calibration_high_mes"];
        }
        document.getElementById("loader").hidden = true;
        document.getElementById("base-panel").hidden = false;
      }
    </script>
